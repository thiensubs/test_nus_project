<div class="table-responsive">
  <table class="table table-striped table-hover">
    <caption><b>Listing posts</b></caption>
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Num of Comment</th>
        <th>Control</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.comments.count %></td>
        <td><%= link_to post do %>
          <button class="btn btn-info" type="button">Show</button>
          <% end %>
          <% if can? :update, post %>
          <%= link_to edit_post_path(post) do %>
          <button class="btn btn-default" type="button">Edit</button>
          <% end %>
          <% end %>
          <% if can? :destroy, post %>
          <%= link_to post, method: :delete, data: {confirm: 'Are you sure?'} do %>
          <button type="button" class="btn btn-danger">Destroy</button>
          <% end %>

          <% end %>

        </td>

        <td><%= post.created_at%>
        </th>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>
<br>
<%= link_to new_post_path do %>
<p><i class="icon-plus-sign"></i> New Post</p>
<% end %>

<div class="page">
  <%= paginate @posts %>
</div>


