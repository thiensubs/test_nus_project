<div class="table-responsive">
  <table class="table table-striped table-hover">
    <caption><b><%= t("Listingposts") %></b></caption>
    <thead>
      <tr>
        <th>#</th>
        <th><%= t("Title")%></th>
        <th><%= t("Num of Comment")%></th>
        <th><%= t("Control")%></th>
        <th><%= t("Created At")%></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.comments.count %></td>
        <td><%= link_to post do %>
          <button class="btn btn-info" type="button"><%= t("Show")%></button>
          <% end %>
          <% if can? :update, post %>
          <%= link_to edit_post_path(post) do %>
          <button class="btn btn-default" type="button"><%= t("Edit")%></button>
          <% end %>
          <% end %>
          <% if can? :destroy, post %>
          <%= link_to post, method: :delete, data: {confirm: 'Are you sure?'} do %>
          <button type="button" class="btn btn-danger"><%= t("Destroy")%></button>
          <% end %>

          <% end %>

        </td>

        <td><%= post.created_at%>
        </th>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>
<br>
<%= link_to new_post_path do %>
<span class="glyphicon glyphicon-plus-sign"></span><%= t("NewPost")%>
<% end %>

<div class="page">
  <%= paginate @posts %>
</div>


